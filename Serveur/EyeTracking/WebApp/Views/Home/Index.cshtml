    <h3>Quelle information vous inciterez davantage à adopter une mobilité éco-responsable ?</h3>
</div>
<div class="d-flex mt-3 justify-content-around">
    <form method="post" action="/Home/FormPostValue">
        <div class="d-flex flex-column justify-content-center">
            <div>
                <select name="value" class="form-select mb-3">
                    <option disabled selected hidden>A, B ou C</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                </select>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Valider</button>
            </div>
        </div>
    </form>
</div>

<script>
    console.log(findPos( document.getElementById("img1") ));
    console.log(findPos( document.getElementById("img2") ));
    console.log(findPos( document.getElementById("img3") ));
    function findPos(obj) {
        var curleft = 0;
        var curtop = 0;
        var widthImage = obj.width;
        var heightImage = obj.height;
          
        if (obj.offsetParent) {
            do {
                curleft += obj.offsetLeft;
                curtop += obj.offsetTop;
            } while (obj = obj.offsetParent);
            
            return {X:curleft,Y:curtop,XMax:widthImage+curleft,YMax:heightImage+curtop};
        }
    }
</script>